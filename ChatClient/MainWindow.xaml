<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="36" Margin="150,10,0,0" TextWrapping="Wrap" Text="Name of user" VerticalAlignment="Top" Width="632"/>
        <Button x:Name="bConnDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="135" Height="36"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="301" Margin="10,51,0,0" VerticalAlignment="Top" Width="772"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="52" Margin="10,357,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
